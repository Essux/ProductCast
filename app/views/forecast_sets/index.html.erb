<% render "details" %>

<% content_for :page_header do %>
    <h1>Predicciones realizadas<small>Prediciones hechas anteriormente</small></h1>
<% end %>

<div class="row">
  <div class="box box-solid">
    <div class="box-header">
      <i class="fa fa-list"></i><h3 class="box-title">Lista de predicciones</h3>
    </div>
    <div class="box-body">
        <table>
            <tr>
                <th> Producto </th>
                <th> Fecha </th>
                <th> Modelos usados </th>
                <th></th>
            <tr>
        
            <% @forecast_set.each do |forecast| %>
                <tr>
                    <td><%= forecast.product.name %></td>
                    <td><%= forecast.created_at %></td>
                    <td><%= link_to "Ver resultados", result_path(:id => forecast.id)%></td>
                </tr>
            <% end %>
        </table>
    </div>
 </div>
</div>
<br>
