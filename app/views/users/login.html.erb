<% content_for :title do %>
<title>Ingresar</title>
<% end %>

<% if signed_in? %>

<% content_for :sidebar_menu_data do %>
  <li ><%= link_to(raw('<i class="fa fa-home"></i> <span>Home</span>'), root_path) %></li>
  <li><%= link_to(raw('<i class="fa fa-upload"></i> <span>Subir archivos</span>'), upload_file_path) %></li>
  <li><%= link_to(raw('<i class="fa fa-briefcase"></i> <span>Productos</span>'), products_path) %></li>
  <li><%= link_to(raw('<i class="fa fa-area-chart"></i> <span>Resultados</span>'), results_path) %></li>
<% end %>

<% content_for :page_header do %>
    <h1>Ingreso</h1>
<% end %>

<p>Usted ya ingresó a la aplicación. Si desea cambiar de usuario primero presione el botón Salir.</p>

<% else %>

<div class="page-header">
  <h1>Por favor ingrese con una cuenta de Office 365 o Gmail</h1>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to "Entrar con Google", '/auth/google' %>
  </div>
</div>

<% end %>